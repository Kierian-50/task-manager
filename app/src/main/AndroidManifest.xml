<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gestiondeprojet">

    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_project_management"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_project_management"
        android:supportsRtl="true"
        android:theme="@style/Theme.GestionDeProjet">
        <activity android:name=".taskDescActivity"></activity>
        <activity android:name=".UpdateTask" />
        <activity android:name=".taskCreateActivity" />
        <activity android:name=".ListTask" />
        <activity android:name=".CreateAccount" />
        <activity android:name=".Connexion" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>